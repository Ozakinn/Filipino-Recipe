<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Filipino Recipes"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirstSystem">
        <activity
            android:name=".splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CardContent" />
        <activity android:name=".NewRecipe" />
        <activity android:name=".ModifyRecipe" />
        <activity android:name=".DeleteRecipe" />
    </application>

</manifest>